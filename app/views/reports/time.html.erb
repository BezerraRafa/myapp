<div class="subtitle-top page-header">
  <h1>Gerar relatório</h1>
</div><br />

<div class="form-group">
    <%= label_tag 'Estudante', nil, class: "col-sm-2 control-label" %>
 
</div>
<div class="form-group">
  <%= label_tag 'Tipo', nil, class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
      <%= select_tag "type", options_for_select([["Estudante", 1], ["Pagamento", 2]], params[:type]), class: "form-control col-sm-5" %>
  </div>
</div>
<div class="form-group">
  <%= label_tag 'Data inicial', nil, class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
    <%= text_field_tag :dinitial, nil, class: "form-control col-sm-5 datepicker", required: true %>
  </div>
</div>
<div class="form-group">
  <%= label_tag 'Data final', nil, class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
    <%= text_field_tag :dfinish, nil, class: "form-control col-sm-5 datepicker", required: true %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-5">
      <%= submit_tag 'Gerar relatório', class: "btn btn-success" %>
  </div>
</div>
