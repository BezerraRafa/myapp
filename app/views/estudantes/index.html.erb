<div class="subtitle-list page-header">
    <%= link_to new_studante_path, class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-plus"></span> Novo estudante
  <% end %>
  <h1>Lista de estudantes</h1>
</div>

<div class="text-right">
  <form class="navbar-form" role="search">
    <div class="form-group">
      <input name="search" type="text" value="<%= params[:search] %>"class="form-control" placeholder="Buscar">
    </div>
    <button type="submit" class="btn btn-success">Buscar</button>
  </form>
</div>

<div class="table-responsavel">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="text-center">ID</th>
        <th>Nome</th>
        <th>Responsável</th>
        <th class="text-center">Auxílio</th>
        <th class="text-center">Curso</th>
      </tr>
    </thead>

    <tbody>
        <%= content_tag_for(:tr, @estudantes) do |estudante| %>
        <td class="text-center"><%= estudante.id %></td>
        <td><%= estudante.name %></td>
        <td><%= estudante.responsavel %></td>
        <td class="text-center">
            <% if estudante.curso? %>
            <i class="glyphicon glyphicon-ok"></i>
          <% else %>
            <i class="glyphicon glyphicon-remove"></i>
          <% end %>
        </td>
        <td class="text-center">
            <%= link_to 'Visualizar', estudante, class: "btn btn-success btn-xs" %>
            <%= link_to 'Editar', edit_estudante_path(estudante), class: "btn btn-success btn-xs"%>
            <%= link_to 'Excluir', estudante, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, class: "btn btn-danger btn-xs" %>
        </td>
      <% end %>
    </tbody>
  </table>
    <%= paginate @estudantes %>
</div>
